<?php if( count( $this->rs ) ): ?>
	<table class="tablesorter">
        <thead>
            <tr>
                <th><?=$this->translate("photo");?></th>
                <th><?=$this->translate("name");?></th>
            </tr>
        </thead>

        <tbody>
		<?php foreach ( $this->rs as $key => $rs ): ?>
			<tr class="<?=$this->changeClass( $key , array( "even" , "odd" ) )?>">
				<td width="77">
                    <?php if( isset( $rs['location'] ) && $rs['location'] ):?>
                        <img src="<?=$this->url?>/file/file/download/read/true/file/<?=base64_encode("thumb_small{$rs['location']}")?>" />
                    <?php else:?>
                        <img src="<?=$this->url?>/file/file/download/read/true/file/<?=base64_encode("thumb_smallfoto.jpg")?>" />
                    <?php endif;?>
				</td>
				<td nowrap="nowrap"><?=$this->ajax( $rs['name'] , 'evaluation-evaluation' , $this->url . '/evaluation/correct/view/person_id/' . $rs['id'] );?></td>
			</tr>
		<?php endforeach;?>
        </tbody>
	</table>
<?php else: ?>
	<div class="message-table-sorter"><?=$this->translate( "there are no records" ) ?></div>
<?php endif; ?>
