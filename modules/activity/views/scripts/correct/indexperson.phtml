                                <?=$this->image( UPLOAD . "/thumb_small_" . $rs->findParentRow( "Share_Model_Person" , "SP" )->location )?>
                            </td>
                            <td><?=$this->ajax( $rs->findParentRow( "Share_Model_Person" , "SP" )->name , 'activity-activity' ,  $this->url . '/activity/correct/input/person_id/' . $rs->person_id ); ?></td>
