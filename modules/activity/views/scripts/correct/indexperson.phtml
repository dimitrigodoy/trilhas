<div>
	<?php if( $this->rs->count() ): ?>
		<table class="tablesorter">
			<thead>
                <tr>
                    <th><?=$this->translate("photo");?></th>
                    <th><?=$this->translate("name");?></th>
                </tr>
            </thead>

            <tbody>
                <?php $verify = false ?>
                <?php foreach ( $this->rs as $rs ): ?>
                
