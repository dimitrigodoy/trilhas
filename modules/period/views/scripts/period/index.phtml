	<h3 style="float: left;"></h3>
	<a style="float: right;color: black;text-decoration: underline;" href="#focus" onclick="Lightbox.destroy( 'treeviewRelationForm' , '/form/form/input/period/true/id/<?=$this->form_id?>' )">X</a>
