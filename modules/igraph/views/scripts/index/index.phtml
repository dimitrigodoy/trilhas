<script>
    $('#view').click(function(){
        var $input_x = $('input','#axis-x'),
            $input_y = $('input','#axis-y'),
            length_x = $input_x.length,
            length_y = $input_y.length,
            total_x = 0,total_y = 0,
            factor_x = -7, factor_y = -32,
            bull_x = 329, bull_y = 187,
            average_x = 0,average_y = 0;

            $input_x.each(function(){
                total_x += parseInt(this.value);
            });

            $input_y.each(function(){
                total_y += parseInt(this.value);
            });

            total_x = total_x/length_x;
            total_y = total_y/length_y;

            if (total_x && total_y) {
                average_x = (total_x*bull_x)/10;
                average_y = (total_y*bull_y)/10;
            } 

            average_x += factor_x;
            average_y += factor_y;

            $('.graph-util span').css('top',average_y)
                                 .css('left',average_x);
    })
    .trigger('click');

    $('.graph-fields input').blur(function(){
        if (this.value > 10 || this.value < 0) {
            alert('Digite um valor entre 0 - 10');
            this.value = 0;
        }

        if (isNaN(parseInt(this.value))) {
            this.value = 0;
        }
    });
</script>